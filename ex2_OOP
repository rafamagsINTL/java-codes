public class zumbi {

    private String nome;
    private double vida;

    public void TransfereVida(double valor) {
        if (valor > 0) {
            saldo += valor;
            System.out.println("Depósito" + valor + " realizado com sucesso.");
        } else {
            System.out.println("Valor de depósito inválido.");
        }
    }
    public void MostrarVida(String nome, double saldo) {
        System.out.println("Titular: " + nome + " | Saldo: R$" + saldo);
    }
    public String getNome() {
        return nome;
    }

    public double getSaldo() {
        return saldo;
    }
}
